---
//src/components/Card.astro
const {name, position, aboutMe, linkedin, github, cvLink, profileImage, malt} = Astro.props;

import '../styles/card.css';
---

<div class="container">
    <div class="card-container">
        <div class="descripcion">
            <h1>{name}</h1>
            <h2>{position}</h2>
            <!-- <p set:html={aboutMe}></p> -->
            <h3><Fragment set:html={aboutMe}/></h3>
            <div class="icons">
                <a href={linkedin} class="hover-text" target="_blank">
                    <span class="tooltip-text" id="fade">LinkedIn
                    </span>
                    <i class="bi bi-linkedin"></i>
                </a>
                <a href={malt} class="hover-text" target="_blank">
                    <span class="tooltip-text" id="fade">Malt
                    </span>
                    <i class="bi bi-malt"></i>
                    
                </a>
                <a href={github} class="hover-text" target="_blank">
                    <span class="tooltip-text" id="fade">GitHub
                    </span>
                    <i class="bi bi-github"></i>
                </a>
                <a href={cvLink} class="hover-text" target="_blank">
                    <span class="tooltip-text" id="fade">CV
                    </span>
                    <i class="bi bi-file-earmark-arrow-down"></i>
                </a>
            </div>
        </div>
        <div class="image">
            <img src={profileImage} alt="">
        </div>
    </div>
</div>